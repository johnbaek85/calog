<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.calog">

    <!-- naver app을 통한 인증을 위해 필요한 permission -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- network 상태를 미리 체크하여 연결 안된 경우 다이얼로그를 보여주려면 아래 permission 추가 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- android test 돌릴 때 화면 lock 풀어야 로그인 touch 가능 -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 위에 까지가 네이버 아이디로 로그인하기 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">


        <activity android:name=".Fitness.ExerciseActivity" />
        <activity android:name=".Fitness.SearchFitnessActivity" />
        <activity android:name=".Fitness.FitnessActivity" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".Diet.FoodSearchActivity" />
        <activity android:name=".Diet.DietActivity" />
        <activity android:name=".signUp.MainJoinActivity" />
        <activity android:name=".signUp.JoinActivity" />
        <activity android:name=".Drinking.TestActivity" />
        <activity android:name=".Drinking.DrinkingActivity" />
        <activity android:name=".Drinking.DrinkingCheckActivity" />
        <activity android:name=".Sleeping.SleepingActivity" />
        <activity android:name=".Sleeping.SleepCheckActivity" />
        <activity android:name=".WordCloud.WordCloudActivity" />
        <activity android:name=".WordCloud.WordCloudWebViewActivity" />
        <activity
            android:name="com.soundcloud.android.crop.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".MainHealthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>
    </application>

</manifest>