<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SleepCheckActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/monthName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="35sp"
                android:text="수면관리"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/btnBackResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_revert" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="110sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Year"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="년간" />

        <Button
            android:id="@+id/Month"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="월간" />

        <Button
            android:id="@+id/Week"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="주간" />

        <Button
            android:id="@+id/Oneday"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일간" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/ic_menu_info_details"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TotalSleep"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:background="@drawable/rect"
            android:gravity="center_vertical"
            android:text="총 수면 시간:" />

        <TextView
            android:id="@+id/SleepSnoring"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_below="@+id/TotalSleep"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="총 코골이 시간:" />

        <TextView
            android:id="@+id/SleepDecibel"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_below="@+id/SleepSnoring"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="평균 소음" />

        <TextView
            android:id="@+id/SleepQuality"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_below="@id/SleepDecibel"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="수면의 질" />

    </LinearLayout>

</LinearLayout>