<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sleeping.DecibelCheck.SleepCheckActivity"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO 그래프 프래그먼트 -->
        <!--<fragment-->
            <!--android:id="@+id/barChartFrag"-->
            <!--android:name="com.example.calog.Common.GraphPagerFragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="300dp" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TotalSleep"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="총 수면 시간:"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/SleepSnoring"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_below="@+id/TotalSleep"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="총 코골이 시간:"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/SleepDecibel"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_below="@+id/SleepSnoring"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="평균 소음"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/SleepQuality"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_below="@id/SleepDecibel"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="수면의 질"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>