<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sleeping.DecibelCheck.SleepCheckActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/monthName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="35sp"
                android:text="수면체크결과"
                android:textColor="#706B6B"
                android:textSize="15sp" />

            <!--<ImageView-->
                <!--android:id="@+id/btnBack"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/icon_back"-->
                <!--android:layout_alignParentLeft="true"/>-->

            <!--<ImageView-->
                <!--android:id="@+id/btnHome"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/ic_home"-->
                <!--android:layout_alignParentRight="true"/>-->
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO 그래프 프래그먼트 -->
        <!--<fragment-->
            <!--android:id="@+id/barChartFrag"-->
            <!--android:name="com.example.calog.Common.GraphPagerFragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="300dp" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TotalSleep"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="총 수면 시간:" />

        <TextView
            android:id="@+id/SleepSnoring"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_below="@+id/TotalSleep"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="총 코골이 시간:" />

        <TextView
            android:id="@+id/SleepDecibel"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_below="@+id/SleepSnoring"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="평균 소음" />

        <TextView
            android:id="@+id/SleepQuality"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_below="@id/SleepDecibel"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="수면의 질" />

    </LinearLayout>

</LinearLayout>